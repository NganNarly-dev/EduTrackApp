<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailedActivity">
    <FrameLayout
        android:id="@+id/back"
        android:layout_width="40dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="40dp">
        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon__back"
            />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/add_note"
        app:layout_constraintTop_toBottomOf="@+id/back"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_marginTop="24dp"
        android:padding="16dp"
        android:background="@drawable/vien_xanh"
        android:layout_height="590dp">
        <TextView
            android:id="@+id/add_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:textSize="36sp"
            android:background="@drawable/bg_white"
            />
        <LinearLayout
            android:id="@+id/chon_lich"
            android:layout_marginTop="68dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/icon_lich"
                android:layout_marginTop="4dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/icon_lich"
                />
            <TextView
                android:id="@+id/lich"
                android:layout_marginStart="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thu, 22/01"
                android:textSize="24dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="119dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/icon_time"
                android:layout_marginTop="4dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/icon__time"
                />
            <TextView
                android:id="@+id/time_start"
                android:layout_marginStart="41dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14:00"
                android:textSize="24dp"
                />
            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/icon__next"
                android:layout_marginTop="4dp"
                android:layout_marginStart="40dp"
                />
            <TextView
                android:id="@+id/time_end"
                android:layout_marginStart="41dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15:00"
                android:textSize="24dp"
                />
        </LinearLayout>
        <FrameLayout
            android:layout_marginTop="180dp"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <TextView
                android:id="@+id/note"
                android:paddingTop="8dp"
                android:paddingStart="8dp"
                android:paddingBottom="12dp"
                android:layout_marginEnd="8dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="22sp"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/bg_note"
                />
        </FrameLayout>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/button_save_cancel"
        app:layout_constraintTop_toBottomOf="@+id/add_note"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_marginEnd="2dp"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/fix_button"
                android:layout_width="170dp"
                android:layout_height="52dp"
                android:layout_marginStart="4dp"
                android:background="@drawable/button_cancel"
                app:backgroundTint="@null"
                />
            <View
                android:id="@+id/icon_note"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="74dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/icon__note"
                android:layout_marginTop="14dp"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/delete_button"
                android:layout_width="170dp"
                android:layout_height="52dp"
                android:background="@drawable/button_delete"
                android:layout_marginStart="32dp"
                app:backgroundTint="@null"
                />
            <View
                android:id="@+id/icon_delete"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="110dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/icon__delete"
                android:layout_marginTop="14dp"/>
        </FrameLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>