<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity">
    <FrameLayout
        android:id="@+id/add_note"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_marginTop="24dp"
        android:padding="16dp"
        android:background="@drawable/vien_xanh"
        android:layout_height="350dp">
        <EditText
            android:id="@+id/add_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:textSize="36sp"
            android:background="@drawable/bg_white"
            />
        <LinearLayout
            android:id="@+id/chon_lich"
            android:layout_marginTop="68dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/icon_lich"
                android:layout_marginTop="4dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/icon_lich"
                />
            <TextView
                android:id="@+id/lich"
                android:layout_marginStart="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Date"
                android:textSize="24dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="119dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/icon_time"
                android:layout_marginTop="4dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/icon__time"
                />
            <EditText
                android:id="@+id/time_start"
                android:layout_marginStart="41dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:hint="00:00"
                android:inputType="number"
                android:maxLength="5"
                />
            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/icon__next"
                android:layout_marginTop="4dp"
                android:layout_marginStart="40dp"
                />
            <EditText
                android:id="@+id/time_end"
                android:layout_marginStart="41dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:hint="00:00"
                android:inputType="number"
                android:maxLength="5"
                />
        </LinearLayout>
        <FrameLayout
            android:layout_marginTop="190dp"
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <EditText
                android:id="@+id/note"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/bg_note"
                android:paddingStart="8dp"
                android:paddingEnd="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textSize="22sp" />
        </FrameLayout>
        <View
            android:id="@+id/icon_note"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="320dp"
            android:layout_marginTop="196dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/icon__note" />
    </FrameLayout>
    <LinearLayout
        android:id="@+id/button_save_cancel"
        app:layout_constraintTop_toBottomOf="@+id/add_note"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:paddingTop="4dp"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/cancel_button"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:text="Cancel"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_marginStart="0dp"
            android:background="@drawable/button_cancel"
            app:backgroundTint="@null"
            />
        <Button
            android:id="@+id/save_button"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:text="Save"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:background="@drawable/button_save"
            android:layout_marginStart="20dp"
            app:backgroundTint="@null"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>